<div id="<%= dom_id daily %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= daily.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">News:</strong>
    <%= daily.news_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this daily", daily, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this daily', edit_daily_path(daily), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
